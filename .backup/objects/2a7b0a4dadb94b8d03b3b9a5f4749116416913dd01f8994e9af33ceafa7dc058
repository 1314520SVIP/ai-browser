name: Android Build CI

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v4
    - name: Set up JDK 17
      uses: actions/setup-java@v4
      with:
        java-version: '17'
        distribution: 'temurin'
        cache: gradle

    - name: Setup Gradle Wrapper
      run: |
        echo "Checking current gradle wrapper setup..."
        ls -la gradle/wrapper/
        
        # Ensure gradlew has proper execution permissions
        chmod +x gradlew
        
        # Remove existing gradle-wrapper.jar
        rm -f gradle/wrapper/gradle-wrapper.jar
        
        # Download and extract a fresh gradle wrapper jar from Gradle 8.5 distribution
        echo "Downloading Gradle 8.5 distribution to extract proper wrapper..."
        wget https://services.gradle.org/distributions/gradle-8.5-bin.zip -O gradle-8.5-bin.zip
        unzip gradle-8.5-bin.zip
        
        # List content of lib dir to see what's available
        echo "Contents of gradle-8.5/lib/:"
        ls -la gradle-8.5/lib/
        
        # Also check the plugins directory
        echo "Contents of gradle-8.5/lib/plugins/:"
        ls -la gradle-8.5/lib/plugins/ | grep wrapper
        
        # The correct wrapper jar should contain all necessary classes including IDownload
        # Let's look for the gradle-wrapper.jar in the main lib directory (this is usually the complete wrapper)
        if [ -f "gradle-8.5/lib/gradle-wrapper.jar" ]; then
          echo "Found gradle-wrapper.jar in main lib directory, copying to project..."
          cp gradle-8.5/lib/gradle-wrapper.jar gradle/wrapper/gradle-wrapper.jar
        elif [ -f "gradle-8.5/lib/plugins/gradle-wrapper-8.5.jar" ]; then
          echo "Found gradle-wrapper-8.5.jar in plugins directory, copying to project..."
          cp gradle-8.5/lib/plugins/gradle-wrapper-8.5.jar gradle/wrapper/gradle-wrapper.jar
        elif [ -f "gradle-8.5/lib/gradle-wrapper-8.5.jar" ]; then
          echo "Found gradle-wrapper-8.5.jar in main lib directory, copying to project..."
          cp gradle-8.5/lib/gradle-wrapper-8.5.jar gradle/wrapper/gradle-wrapper.jar
        else
          # Last resort: search for any jar file containing "wrapper" in the name
          wrapper_jar=$(find gradle-8.5 -name "*wrapper*.jar" -type f | head -n 1)
          if [ -n "$wrapper_jar" ]; then
            echo "Found wrapper jar: $wrapper_jar, copying to project..."
            cp "$wrapper_jar" gradle/wrapper/gradle-wrapper.jar
          else
            echo "ERROR: Could not find gradle-wrapper.jar in distribution"
            find gradle-8.5 -name "*.jar" -type f
            exit 1
          fi
        fi
        
        # Verify the jar contents to ensure it has ALL the required classes
        echo "Checking contents of gradle-wrapper.jar for required classes:"
        jar -tf gradle/wrapper/gradle-wrapper.jar | grep -i wrapper
        echo "Checking for IDownload class specifically:"
        if jar -tf gradle/wrapper/gradle-wrapper.jar | grep -i IDownload > /dev/null; then
          echo "SUCCESS: IDownload class found in jar"
        else
          echo "ERROR: IDownload class NOT FOUND in jar"
          echo "Listing all classes in the jar:"
          jar -tf gradle/wrapper/gradle-wrapper.jar | grep "\.class$"
          exit 1
        fi
        jar -tf gradle/wrapper/gradle-wrapper.jar | grep -i GradleWrapperMain
        
        # Check if jar file is valid
        if jar -tf gradle/wrapper/gradle-wrapper.jar > /dev/null 2>&1; then
          echo "gradle-wrapper.jar is valid"
        else
          echo "ERROR: gradle-wrapper.jar is invalid"
          exit 1
        fi
        
        # Verify the wrapper jar was copied
        ls -la gradle/wrapper/
        
        # Instead of creating the new gradlew script inline, let's modify the existing one with sed
        echo "Fixing gradlew script with sed..."
        cp gradlew gradlew.bak
        
        # Replace the problematic APP_HOME line with correct syntax
        sed -i 's/APP_HOME=`dirname "$0"`/APP_HOME="$(dirname "$0")"/' gradlew
        
        # Also fix any other potential issues
        sed -i 's/APP_HOME_PATH=\$APP_HOME/APP_HOME_PATH="\$APP_HOME"/g' gradlew
        sed -i 's/CLASSPATH=\$CLASSPATH/CLASSPATH="\$CLASSPATH"/g' gradlew
        
        # Verify the changes
        echo "Changes made to gradlew:"
        grep -n "APP_HOME" gradlew || echo "APP_HOME not found"
        
        # Ensure proper execution permissions
        chmod +x gradlew
        
        # Verify the new script
        echo "Updated gradlew script with content:"
        head -30 gradlew

    - name: Set up Android SDK
      uses: android-actions/setup-android@v3
      with:
        packages: build-tools;34.0.0 platforms;android-34 cmdline-tools;latest

    - name: Accept SDK Licenses
      run: yes | sdkmanager --licenses

    - name: Grant execute permission for gradlew
      run: chmod +x gradlew
      
    - name: Check gradlew script
      run: |
        echo "Checking gradlew script for APP_HOME variable..."
        grep -n "APP_HOME" gradlew || echo "APP_HOME variable not found in gradlew"
        echo "Displaying APP_HOME related lines:"
        grep -A 2 -B 2 "APP_HOME" gradlew
        head -20 gradlew

    - name: Create missing directories and files if not present
      run: |
        echo "Ensuring all required directories exist..."
        mkdir -p app/src/main/res/mipmap-mdpi
        mkdir -p app/src/main/res/mipmap-hdpi
        mkdir -p app/src/main/res/mipmap-xhdpi
        mkdir -p app/src/main/res/mipmap-xxhdpi
        mkdir -p app/src/main/res/mipmap-xxxhdpi
        
        # Create placeholder files if they don't exist
        if [ ! -f "app/src/main/res/mipmap-mdpi/ic_launcher.png" ]; then
          echo "Creating placeholder mipmap-mdpi/ic_launcher.png"
          touch app/src/main/res/mipmap-mdpi/ic_launcher.png
        fi
        if [ ! -f "app/src/main/res/mipmap-hdpi/ic_launcher.png" ]; then
          echo "Creating placeholder mipmap-hdpi/ic_launcher.png"
          touch app/src/main/res/mipmap-hdpi/ic_launcher.png
        fi
        if [ ! -f "app/src/main/res/mipmap-xhdpi/ic_launcher.png" ]; then
          echo "Creating placeholder mipmap-xhdpi/ic_launcher.png"
          touch app/src/main/res/mipmap-xhdpi/ic_launcher.png
        fi
        if [ ! -f "app/src/main/res/mipmap-xxhdpi/ic_launcher.png" ]; then
          echo "Creating placeholder mipmap-xxhdpi/ic_launcher.png"
          touch app/src/main/res/mipmap-xxhdpi/ic_launcher.png
        fi
        if [ ! -f "app/src/main/res/mipmap-xxxhdpi/ic_launcher.png" ]; then
          echo "Creating placeholder mipmap-xxxhdpi/ic_launcher.png"
          touch app/src/main/res/mipmap-xxxhdpi/ic_launcher.png
        fi
        
        if [ ! -f "app/src/main/res/mipmap-mdpi/ic_launcher_round.png" ]; then
          echo "Creating placeholder mipmap-mdpi/ic_launcher_round.png"
          touch app/src/main/res/mipmap-mdpi/ic_launcher_round.png
        fi
        if [ ! -f "app/src/main/res/mipmap-hdpi/ic_launcher_round.png" ]; then
          echo "Creating placeholder mipmap-hdpi/ic_launcher_round.png"
          touch app/src/main/res/mipmap-hdpi/ic_launcher_round.png
        fi
        if [ ! -f "app/src/main/res/mipmap-xhdpi/ic_launcher_round.png" ]; then
          echo "Creating placeholder mipmap-xhdpi/ic_launcher_round.png"
          touch app/src/main/res/mipmap-xhdpi/ic_launcher_round.png
        fi
        if [ ! -f "app/src/main/res/mipmap-xxhdpi/ic_launcher_round.png" ]; then
          echo "Creating placeholder mipmap-xxhdpi/ic_launcher_round.png"
          touch app/src/main/res/mipmap-xxhdpi/ic_launcher_round.png
        fi
        if [ ! -f "app/src/main/res/mipmap-xxxhdpi/ic_launcher_round.png" ]; then
          echo "Creating placeholder mipmap-xxxhdpi/ic_launcher_round.png"
          touch app/src/main/res/mipmap-xxxhdpi/ic_launcher_round.png
        fi

    - name: List project files
      run: |
        echo "Project structure:"
        find . -name "build.gradle" -type f
        echo "Contents of root build.gradle:"
        cat build.gradle
        echo "Contents of app/build.gradle:"
        cat app/build.gradle
        echo "Contents of gradle.properties:"
        cat gradle.properties

    - name: Check Android Manifest
      run: |
        echo "Checking AndroidManifest.xml..."
        cat app/src/main/AndroidManifest.xml

    - name: Check resources
      run: |
        echo "Checking app resources..."
        echo "Values in strings.xml:"
        cat app/src/main/res/values/strings.xml
        echo "Values in styles.xml:"
        cat app/src/main/res/values/styles.xml
        echo "Values in colors.xml:"
        cat app/src/main/res/values/colors.xml
        echo "Mipmap directories:"
        ls -la app/src/main/res/mipmap-*/

    - name: Build with Gradle
      run: |
        echo "Testing gradlew script execution..."
        # Test if gradlew can execute
        echo "Running gradlew with --info flag for more details..."
        ./gradlew --version
        
        echo "Attempting to build the project with more verbose output..."
        ./gradlew build --no-daemon --console=plain --info --stacktrace

    - name: Build Debug APK
      run: ./gradlew assembleDebug --no-daemon --console=plain --info --stacktrace

    - name: Upload APK
      uses: actions/upload-artifact@v4
      with:
        name: app-debug-apk
        path: app/build/outputs/apk/debug/app-debug.apk

    - name: Build Release APK
      run: ./gradlew assembleRelease --no-daemon --console=plain --info --stacktrace
      env:
        SIGNING_KEY: ${{ secrets.SIGNING_KEY }}
        SIGNING_PASSWORD: ${{ secrets.SIGNING_PASSWORD }}
        KEYSTORE_PASSWORD: ${{ secrets.KEYSTORE_PASSWORD }}
        KEY_ALIAS: ${{ secrets.KEY_ALIAS }}

    - name: Upload Release APK
      uses: actions/upload-artifact@v4
      with:
        name: app-release-apk
        path: app/build/outputs/apk/release/app-release.apk