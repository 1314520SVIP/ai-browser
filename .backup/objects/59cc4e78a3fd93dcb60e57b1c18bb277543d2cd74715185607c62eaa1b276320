name: Android Build CI

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v4
    - name: Set up JDK 17
      uses: actions/setup-java@v4
      with:
        java-version: '17'
        distribution: 'temurin'
        cache: gradle

    - name: Setup Gradle Wrapper
      run: |
        echo "Checking current gradle wrapper setup..."
        ls -la gradle/wrapper/
        
        # Ensure gradlew has proper execution permissions
        chmod +x gradlew
        
        # Create a new gradlew script with properly defined APP_HOME
        echo "Creating new gradlew script with proper APP_HOME..."
        cat > gradlew.new << 'EOF'
#!/bin/sh

# Copyright (c) 2015-present, Gradle Inc., Deactivated Code GmbH
#
# Licensed under the Apache License, Version 2.0 (the "License");
# you may not use this file except in compliance with the License.
# You may obtain a copy of the License at
#
#      https://www.apache.org/licenses/LICENSE-2.0
#
# Unless required by applicable law or agreed to in writing, software
# distributed under the License is distributed on an "AS IS" BASIS,
# WITHOUT WARRANTIES OR CONDITIONS OF ANY KIND, either express or implied.
# See the License for the specific language governing permissions and
# limitations under the License.

# Add default JVM options here. You can also use JAVA_OPTS and GRADLE_OPTS to pass JVM options to this script.
DEFAULT_JVM_OPTS='"-Xmx64m" "-Xms64m"'

# Use the maximum available, or set MAX_FD != -1 to use that value.
MAX_FD="Maximum"

warn () {
    echo "$*"
}

die () {
    echo
    echo "$*"
    echo
    exit 1
}

# OS specific support (must be 'true' or 'false').
cygwin=false
msys=false
darwin=false
case "`uname`" in
  CYGWIN* )
    cygwin=true
    ;;
  Darwin* )
    darwin=true
    ;;
  MINGW* )
    msys=true
    ;;
esac

# Set APP_HOME to the directory of this script
# Using $(dirname "$0") instead of backticks to avoid potential parsing issues
APP_HOME=$(dirname "$0")

# For Cygwin or MSYS, switch paths to Windows format before running java
if $cygwin || $msys ; then
    APP_HOME_PATH=`cygpath --path --mixed "$APP_HOME"`
    CLASSPATH=`cygpath --path --mixed "$CLASSPATH"`
else
    APP_HOME_PATH=$APP_HOME
    CLASSPATH=$CLASSPATH
fi

# Determine the Java command to use to start the JVM.
if [ -n "$JAVA_HOME" ] ; then
    if [ -x "$JAVA_HOME/jre/sh/java" ] ; then
        # IBM's JDK on AIX uses strange locations for the executables
        JAVACMD="$JAVA_HOME/jre/sh/java"
    else
        JAVACMD="$JAVA_HOME/bin/java"
    fi
    if [ ! -x "$JAVACMD" ] ; then
        die "ERROR: JAVA_HOME is set to an invalid directory: $JAVA_HOME

Please set the JAVA_HOME variable in your environment to match the
location of your Java installation."
    fi
else
    JAVACMD="java"
    which java >/dev/null 2>&1 || die "ERROR: JAVA_HOME is not set and no 'java' command could be found in your PATH.

Please set the JAVA_HOME variable in your environment to match the
location of your Java installation."
fi

# Increase the maximum file descriptors if we can.
if [ "$cygwin" = "false" -a "$darwin" = "false" ] ; then
    MAX_FD_LIMIT=`ulimit -H -n`
    if [ $? -eq 0 ] ; then
        if [ "$MAX_FD" = "Maximum" -o "$MAX_FD" = "maximum" ] ; then
            MAX_FD="$MAX_FD_LIMIT"
        fi
        ulimit -n $MAX_FD
        if [ $? -ne 0 ] ; then
            warn "Could not set maximum file descriptor limit: $MAX_FD"
        fi
    else
        warn "Could not query maximum file descriptor limit: $MAX_FD_LIMIT"
    fi
fi

# For Darwin, add options to specify how the application appears in the dock
if $darwin; then
    GRADLE_OPTS="$GRADLE_OPTS -Xdock:name=$APP_NAME -Xdock:icon=$APP_HOME/media/gradle.icns"
fi

CLASSPATH=$APP_HOME_PATH/gradle/wrapper/gradle-wrapper.jar

# Determine the Java command to use to start the JVM.
if [ -n "$JAVA_HOME" ] ; then
    if [ -x "$JAVA_HOME/jre/sh/java" ] ; then
        # IBM's JDK on AIX uses strange locations for the executables
        JAVACMD="$JAVA_HOME/jre/sh/java"
    else
        JAVACMD="$JAVA_HOME/bin/java"
    fi
    if [ ! -x "$JAVACMD" ] ; then
        die "ERROR: JAVA_HOME is set to an invalid directory: $JAVA_HOME

Please set the JAVA_HOME variable in your environment to match the
location of your Java installation."
    fi
else
    JAVACMD="java"
    which java >/dev/null 2>&1 || die "ERROR: JAVA_HOME is not set and no 'java' command could be found in your PATH.

Please set the JAVA_HOME variable in your environment to match the
location of your Java installation."
fi

# Split up the JVM_OPTS And GRADLE_OPTS values into an array, following the shell quoting and substitution rules
set -e
eval set -- $DEFAULT_JVM_OPTS $JAVA_OPTS $GRADLE_OPTS -classpath "\"$CLASSPATH\"" org.gradle.wrapper.GradleWrapperMain "$@"

# Execute the JVM
exec "$JAVACMD" "$@"
EOF

        # Replace the old gradlew with the new one
        mv gradlew gradlew.bak
        mv gradlew.new gradlew
        chmod +x gradlew
        
        echo "New gradlew script created with proper APP_HOME handling"
        echo "Checking APP_HOME in new gradlew script:"
        grep -n "APP_HOME" gradlew

        # Remove our potentially problematic gradle-wrapper.jar
        if [ -f "gradle/wrapper/gradle-wrapper.jar" ]; then
          echo "Removing existing gradle-wrapper.jar"
          rm -f gradle/wrapper/gradle-wrapper.jar
        fi
        
        # Download gradle distribution to get the correct wrapper jar
        echo "Downloading Gradle 8.5..."
        wget https://services.gradle.org/distributions/gradle-8.5-bin.zip -O gradle-distribution.zip
        
        # Check if download was successful
        if [ -f "gradle-distribution.zip" ]; then
          echo "Download successful. Unzipping..."
          unzip gradle-distribution.zip
          
          # List available wrapper jars in the distribution
          echo "Looking for wrapper jars in the distribution..."
          find gradle-8.5 -name "*wrapper*.jar" -type f
          
          # Copy the correct wrapper jar - try different possible locations
          if [ -f "gradle-8.5/lib/plugins/gradle-wrapper-8.5.jar" ]; then
            echo "Found gradle-wrapper-8.5.jar, copying to project..."
            cp gradle-8.5/lib/plugins/gradle-wrapper-8.5.jar gradle/wrapper/gradle-wrapper.jar
          elif [ -f "gradle-8.5/lib/gradle-wrapper.jar" ]; then
            echo "Found gradle-wrapper.jar in lib directory, copying to project..."
            cp gradle-8.5/lib/gradle-wrapper.jar gradle/wrapper/gradle-wrapper.jar
          elif [ -f "gradle-8.5/lib/gradle-wrapper-shared-8.5.jar" ]; then
            echo "Found gradle-wrapper-shared-8.5.jar, copying to project..."
            cp gradle-8.5/lib/gradle-wrapper-shared-8.5.jar gradle/wrapper/gradle-wrapper.jar
          else
            # Use find to locate any wrapper jar
            WRAPPER_JAR=$(find gradle-8.5 -name "*wrapper*.jar" -type f | head -n 1)
            if [ -n "$WRAPPER_JAR" ]; then
              echo "Found wrapper jar, copying: $WRAPPER_JAR"
              cp "$WRAPPER_JAR" gradle/wrapper/gradle-wrapper.jar
            else
              echo "ERROR: No wrapper jar found in distribution"
              exit 1
            fi
          fi
        else
          echo "ERROR: Failed to download Gradle distribution"
          exit 1
        fi
        
        # Verify the copied jar exists and list its contents
        if [ -f "gradle/wrapper/gradle-wrapper.jar" ]; then
          echo "gradle-wrapper.jar successfully created"
          ls -la gradle/wrapper/
          echo "Checking contents of gradle-wrapper.jar for required classes:"
          jar -tf gradle/wrapper/gradle-wrapper.jar | grep -i wrapper
          jar -tf gradle/wrapper/gradle-wrapper.jar | grep -i IDownload
          jar -tf gradle/wrapper/gradle-wrapper.jar | grep -i GradleWrapperMain
          
          echo "Checking gradlew script after modification:"
          grep -n "APP_HOME" gradlew || echo "APP_HOME not found in modified gradlew"
        else
          echo "ERROR: gradle-wrapper.jar was not created successfully"
          exit 1
        fi

    - name: Set up Android SDK
      uses: android-actions/setup-android@v3
      with:
        packages: build-tools;34.0.0, platforms;android-34, cmdline-tools;latest

    - name: Accept SDK Licenses
      run: yes | sdkmanager --licenses

    - name: Grant execute permission for gradlew
      run: chmod +x gradlew
      
    - name: Check gradlew script
      run: |
        echo "Checking gradlew script for APP_HOME variable..."
        grep -n "APP_HOME" gradlew || echo "APP_HOME variable not found in gradlew"
        head -20 gradlew

    - name: Create missing directories and files if not present
      run: |
        echo "Ensuring all required directories exist..."
        mkdir -p app/src/main/res/mipmap-mdpi
        mkdir -p app/src/main/res/mipmap-hdpi
        mkdir -p app/src/main/res/mipmap-xhdpi
        mkdir -p app/src/main/res/mipmap-xxhdpi
        mkdir -p app/src/main/res/mipmap-xxxhdpi
        
        # Create placeholder files if they don't exist
        if [ ! -f "app/src/main/res/mipmap-mdpi/ic_launcher.png" ]; then
          echo "Creating placeholder mipmap-mdpi/ic_launcher.png"
          touch app/src/main/res/mipmap-mdpi/ic_launcher.png
        fi
        if [ ! -f "app/src/main/res/mipmap-hdpi/ic_launcher.png" ]; then
          echo "Creating placeholder mipmap-hdpi/ic_launcher.png"
          touch app/src/main/res/mipmap-hdpi/ic_launcher.png
        fi
        if [ ! -f "app/src/main/res/mipmap-xhdpi/ic_launcher.png" ]; then
          echo "Creating placeholder mipmap-xhdpi/ic_launcher.png"
          touch app/src/main/res/mipmap-xhdpi/ic_launcher.png
        fi
        if [ ! -f "app/src/main/res/mipmap-xxhdpi/ic_launcher.png" ]; then
          echo "Creating placeholder mipmap-xxhdpi/ic_launcher.png"
          touch app/src/main/res/mipmap-xxhdpi/ic_launcher.png
        fi
        if [ ! -f "app/src/main/res/mipmap-xxxhdpi/ic_launcher.png" ]; then
          echo "Creating placeholder mipmap-xxxhdpi/ic_launcher.png"
          touch app/src/main/res/mipmap-xxxhdpi/ic_launcher.png
        fi
        
        if [ ! -f "app/src/main/res/mipmap-mdpi/ic_launcher_round.png" ]; then
          echo "Creating placeholder mipmap-mdpi/ic_launcher_round.png"
          touch app/src/main/res/mipmap-mdpi/ic_launcher_round.png
        fi
        if [ ! -f "app/src/main/res/mipmap-hdpi/ic_launcher_round.png" ]; then
          echo "Creating placeholder mipmap-hdpi/ic_launcher_round.png"
          touch app/src/main/res/mipmap-hdpi/ic_launcher_round.png
        fi
        if [ ! -f "app/src/main/res/mipmap-xhdpi/ic_launcher_round.png" ]; then
          echo "Creating placeholder mipmap-xhdpi/ic_launcher_round.png"
          touch app/src/main/res/mipmap-xhdpi/ic_launcher_round.png
        fi
        if [ ! -f "app/src/main/res/mipmap-xxhdpi/ic_launcher_round.png" ]; then
          echo "Creating placeholder mipmap-xxhdpi/ic_launcher_round.png"
          touch app/src/main/res/mipmap-xxhdpi/ic_launcher_round.png
        fi
        if [ ! -f "app/src/main/res/mipmap-xxxhdpi/ic_launcher_round.png" ]; then
          echo "Creating placeholder mipmap-xxxhdpi/ic_launcher_round.png"
          touch app/src/main/res/mipmap-xxxhdpi/ic_launcher_round.png
        fi

    - name: List project files
      run: |
        echo "Project structure:"
        find . -name "build.gradle" -type f
        echo "Contents of root build.gradle:"
        cat build.gradle
        echo "Contents of app/build.gradle:"
        cat app/build.gradle
        echo "Contents of gradle.properties:"
        cat gradle.properties

    - name: Check Android Manifest
      run: |
        echo "Checking AndroidManifest.xml..."
        cat app/src/main/AndroidManifest.xml

    - name: Check resources
      run: |
        echo "Checking app resources..."
        echo "Values in strings.xml:"
        cat app/src/main/res/values/strings.xml
        echo "Values in styles.xml:"
        cat app/src/main/res/values/styles.xml
        echo "Values in colors.xml:"
        cat app/src/main/res/values/colors.xml
        echo "Mipmap directories:"
        ls -la app/src/main/res/mipmap-*/

    - name: Build with Gradle
      run: |
        echo "Running gradlew with version info..."
        ./gradlew --version
        echo "Attempting to build the project..."
        ./gradlew build --no-daemon --info --stacktrace

    - name: Build Debug APK
      run: ./gradlew assembleDebug --no-daemon --info --stacktrace

    - name: Upload APK
      uses: actions/upload-artifact@v4
      with:
        name: app-debug-apk
        path: app/build/outputs/apk/debug/app-debug.apk

    - name: Build Release APK
      run: ./gradlew assembleRelease --no-daemon --info --stacktrace
      env:
        SIGNING_KEY: ${{ secrets.SIGNING_KEY }}
        SIGNING_PASSWORD: ${{ secrets.SIGNING_PASSWORD }}
        KEYSTORE_PASSWORD: ${{ secrets.KEYSTORE_PASSWORD }}
        KEY_ALIAS: ${{ secrets.KEY_ALIAS }}

    - name: Upload Release APK
      uses: actions/upload-artifact@v4
      with:
        name: app-release-apk
        path: app/build/outputs/apk/release/app-release.apk